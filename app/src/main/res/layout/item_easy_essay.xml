<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/status_icon"
            />
        <TextView
           android:id="@+id/item_essay_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+关注"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/item_essay_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_essay_digg_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/select_digg"
            android:text="赞数"
            />

        <TextView
            android:id="@+id/item_essay_bury_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/select_bury"
            android:text="踩数"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/item_essay_comment_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@drawable/select_hot"
            android:layout_height="wrap_content"
            android:text="评论数"
            />

        <TextView
            android:id="@+id/item_essay_share_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_more_action_normal"
            android:layout_height="wrap_content"
            android:text="分享数"
            />
    </LinearLayout>
</LinearLayout>